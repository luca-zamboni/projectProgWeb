<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FilterLogin</filter-name>
        <filter-class>FilterLogin</filter-class>
    </filter>
    <filter>
        <filter-name>FilterNotOwner</filter-name>
        <filter-class>FilterNotOwner</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterLogin</filter-name>
        <servlet-name>Logout</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLogin</filter-name>
        <servlet-name>Login</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLogin</filter-name>
        <servlet-name>NewGroup</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLogin</filter-name>
        <servlet-name>GroupHome</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterNotOwner</filter-name>
        <servlet-name>NewGroup</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewGroup</servlet-name>
        <servlet-class>NewGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupHome</servlet-name>
        <servlet-class>GroupHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewGroup</servlet-name>
        <url-pattern>/newGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupHome</servlet-name>
        <url-pattern>/GroupHome</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
