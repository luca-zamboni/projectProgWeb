<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filters.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>FilterNotOwner</filter-name>
        <filter-class>filters.FilterNotOwner</filter-class>
    </filter>
    <filter>
        <filter-name>GetFilter</filter-name>
        <filter-class>filters.FileAccess</filter-class>
    </filter>
    <filter>
        <filter-name>AlreadyLogged</filter-name>
        <filter-class>filters.AlreadyLogged</filter-class>
    </filter>
    <filter>
        <filter-name>AddPostFilter</filter-name>
        <filter-class>filters.AddPostFilter</filter-class>
    </filter>
    <filter>
        <filter-name>IsInGroupFilter</filter-name>
        <filter-class>filters.IsInGroupFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>IsInGroupFilter</filter-name>
        <servlet-name>Threadgroup</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AddPostFilter</filter-name>
        <url-pattern>/includes/addpost.jsp</url-pattern>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AlreadyLogged</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterNotOwner</filter-name>
        <url-pattern>/modifygroup.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GetFilter</filter-name>
        <url-pattern>/database/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/home.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupCreate</servlet-name>
        <servlet-class>servlets.GroupCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePass</servlet-name>
        <servlet-class>servlets.ChangePass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetPassword</servlet-name>
        <servlet-class>servlets.ForgetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModProfile</servlet-name>
        <servlet-class>servlets.ModProfile</servlet-class>
        <init-param>
            <param-name>uploadDir</param-name>
            <param-value>/tmp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Threadgroup</servlet-name>
        <servlet-class>servlets.ThreadGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>servlets.AddPost</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PdfCreator</servlet-name>
        <servlet-class>servlets.PdfCreator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupModify</servlet-name>
        <servlet-class>servlets.GroupModify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>servlets.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptInvitation</servlet-name>
        <servlet-class>servlets.AcceptInvitation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminModeratori</servlet-name>
        <servlet-class>servlets.AdminModeratori</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupCreate</servlet-name>
        <url-pattern>/groupCreate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePass</servlet-name>
        <url-pattern>/changePass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetPassword</servlet-name>
        <url-pattern>/ForgetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModProfile</servlet-name>
        <url-pattern>/modprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Threadgroup</servlet-name>
        <url-pattern>/threadgroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/addpost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PdfCreator</servlet-name>
        <url-pattern>/PdfCreator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupModify</servlet-name>
        <url-pattern>/GroupModify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptInvitation</servlet-name>
        <url-pattern>/acceptinvitation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminModeratori</servlet-name>
        <url-pattern>/adminmoderatori</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
